import java.util.Scanner;

public class Suma {

	public static void main(String[] args) {
		
		int suma = 0;
		System.out.println("Podaj liczbê n: ");
		Scanner odczyt = new Scanner(System.in);
		int n = odczyt.nextInt();
		for (int i =0; i <= n; i++) {
			suma = suma + i;
			System.out.println("Suma liczb od 1 do " + n + " wynosi: " + suma);
		}
	}

}
